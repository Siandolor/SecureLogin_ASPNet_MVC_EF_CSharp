@{
    ViewData["Title"] = "Login";
}

<h2 class="text-center mt-4">Nutzer-@ViewData["Title"]</h2>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Login" method="post" class="mt-4">
            <div class="form-group mb-3">
                <label for="username">Benutzername</label>
                <input type="text" class="form-control" id="username" name="username" required />
            </div>

            <div class="form-group mb-3">
                <label for="password">Passwort</label>
                <input type="password" class="form-control" id="password" name="password" required />
            </div>

            <button type="submit" class="btn btn-success w-100">Login</button>

            <div class="mt-3 text-center">
                <a asp-controller="Account" asp-action="Register">Noch kein Konto? Jetzt registrieren</a>
            </div>
        </form>

        <div asp-validation-summary="All" class="text-danger mt-3"></div>
    </div>
</div>
